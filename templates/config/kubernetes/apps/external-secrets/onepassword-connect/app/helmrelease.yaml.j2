---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: onepassword-connect
spec:
  interval: 1h
  chart:
    spec:
      chart: connect
      version: "2.1.1"
      sourceRef:
        kind: HelmRepository
        name: onepassword-connect
  install:
    remediation:
      retries: 3
  upgrade:
    cleanupOnFail: true
    remediation:
      strategy: rollback
      retries: 3
  values:
    connect:
      credentials_base64: "#{ onepassword_credentials_json }#"
